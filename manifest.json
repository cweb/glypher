{
  "manifest_version": 2,
  "name": "Glypher",
  "version": "0.1",
  "description": "Transform text to confuse pattern-matching, for fun effects, or for secret encryption.",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://txtn.us; object-src 'self'",
  "icons": { "dolphin": "images/glypher.png" },
  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_title": "Keep text readable but confusable",
    "default_icon": "images/glypher.png",
    "default_popup": "popup.html"
  }
}